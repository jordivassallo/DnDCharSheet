<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root type="StackPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fitHeight="480.0" fitWidth="640.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/Landscape_day.png" />
         </image>
      </ImageView>
      <javafx.scene.layout.VBox fx:id="vboxMenu" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0">
         <children>
              <Label fx:id="lblTitle" text="- Dungeons &amp; Dragons -" textFill="#fa0000">
               <font>
                  <Font name="Algerian" size="34.0" />
               </font>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </Label>
            <Label fx:id="lblSubTitle" text="Character Sheet Creator" textFill="#fa0000">
               <font>
                  <Font name="Algerian" size="18.0" />
               </font>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </Label>
            <ImageView fx:id="imgviewLogo" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
               <image>
                  <Image url="@../img/logo.png" />
               </image>
            </ImageView>
            <StackPane prefHeight="42.0" prefWidth="640.0">
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
               <children>
                  <ImageView fx:id="createBtnImage" fitHeight="52.0" fitWidth="209.0" onMouseClicked="#createBtn" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/button_unpressed.png" />
                     </image>
                  </ImageView>
                  <Label alignment="CENTER" mouseTransparent="true" prefHeight="30.0" prefWidth="200.0" text="Create Character">
                     <font>
                        <Font name="Algerian" size="14.0" />
                     </font>
                  </Label>
               </children>
            </StackPane>
            <StackPane prefHeight="42.0" prefWidth="640.0">
               <children>
                  <ImageView fx:id="loadBtnImage" fitHeight="52.0" fitWidth="209.0" onMouseClicked="#createBtn" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/button_unpressed.png" />
                     </image>
                  </ImageView>
                  <Label alignment="CENTER" mouseTransparent="true" prefHeight="30.0" prefWidth="200.0" text="Load Charactrer">
                     <font>
                        <Font name="Algerian" size="14.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </StackPane>
          </children>
      </javafx.scene.layout.VBox>
   </children>
</fx:root>
